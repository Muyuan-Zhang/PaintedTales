.user-info {
  position: fixed;
  top: 100rpx;
  left: 20rpx;
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.95); /* 稍微亮一点 */
  padding: 16rpx 24rpx;
  border-radius: 24rpx;
  z-index: 999;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1); /* 可选：添加阴影更立体 */
}

.avatar {
  width: 100rpx;   /* 原来是 80rpx */
  height: 100rpx;
  border-radius: 50%;
  object-fit: cover;
  margin-right: 16rpx; /* 多一点间距 */
}

.username {
  font-size: 32rpx;  /* 原来是 28rpx */
  color: #222;
  font-weight: bold;
}


/* 页面整体容器，100vh高，垂直居中 */
.container {
  height: 100vh;
  padding: 20rpx 30rpx;
  background-color: #f5f5f7;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* 垂直居中 */
  align-items: center;
  /* 水平居中 */
  box-sizing: border-box;
}

/* 输入区横排 */
.input-section {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 16rpx;
  width: 100%;
  max-width: 640rpx;
  margin-bottom: 30rpx;
}

/* 输入框占满剩余空间 */
.input-box {
  flex: 1;
  height: 56rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  background-color: #fff;
}

/* 提交按钮 */
.submit-btn {
  padding: 0 30rpx;
  height: 56rpx;
  background-color: #1aad19;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  line-height: 56rpx;
  user-select: none;
}

/* 回复区域容器 */
.result-section {
  background-color: #fff;
  padding: 24rpx 28rpx;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 640rpx;
  min-height: 120rpx;
}

/* 回复标题 */
.result-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 14rpx;
  display: block;
  text-align: left;
}

/* 回复内容 */
.reply {
  font-size: 28rpx;
  color: #444;
  line-height: 1.6;
  word-break: break-word;
  white-space: normal;
  text-align: left;
}

