.container {
  padding: 30rpx;
}

.input-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

input {
  border: 1px solid #ccc;
  padding: 10rpx;
  border-radius: 8rpx;
}

button {
  background-color: #007aff;
  color: white;
  padding: 12rpx 0;
  border-radius: 8rpx;
}

.result-section {
  margin-top: 40rpx;
}

.reply {
  margin-top: 10rpx;
  line-height: 1.6;
  color: #333;
}
