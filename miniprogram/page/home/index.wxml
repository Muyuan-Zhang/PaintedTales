<!-- 插画轮播图展示 -->
<!-- 图片轮播，仅在 imageList 有内容时显示 -->
<view wx:if="{{imageList.length > 0}}">
  <view>{{swiperKey}}</view>
  <swiper
    class="swiper"
    circular
    indicator-dots
    autoplay
    interval="3000"
    duration="500"
    key="{{swiperKey}}"
  >
    <block wx:for="{{imageList}}" wx:key="index">
      <swiper-item class="swiper-item">
        <image src="{{item}}" mode="aspectFit" class="image" />
      </swiper-item>
    </block>
  </swiper>
</view>


</view>